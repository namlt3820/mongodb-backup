{
  "name": "mongodb-backup",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test ts-mocha -p tsconfig.json 'src/**/*.test.ts'",
    "test:pattern": "cross-env NODE_ENV=test ts-mocha -p tsconfig.json 'src/**/*.test.ts' -g",
    "dev:docker": "docker-compose --env-file ./env/.env.development up --build -d",
    "dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "dev:local": "cross-env NODE_ENV=local ts-node src/index.ts",
    "prod": "docker-compose --env-file ./env/.env.production up --build -d",
    "prod:log": "docker-compose --env-file ./env/.env.production up --build",
    "start": "ts-node src/index.ts"
  },
  "devDependencies": {
    "@types/cron": "^1.7.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^15.12.5",
    "cross-env": "^7.0.3",
    "mocha": "^9.1.1",
    "prettier": "^2.3.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "await-spawn": "^4.0.2",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0"
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": true
  },
  "keywords": [],
